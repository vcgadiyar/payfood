<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.vcgadiyar.helloandroid.FeedbackActivity">

    <TextView
    android:id="@+id/lblitem1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Rate Me"
    android:textAppearance="?android:attr/textAppearanceMedium" />

    <RatingBar
        android:id="@+id/ratingBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0.0"
        android:layout_below="@+id/lblitem1"/>

    <EditText
        android:id="@+id/fld_fb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter additional comments"
        android:layout_marginLeft="8dp"
        android:paddingLeft="5dp"
        android:textSize="13sp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/ratingBar1"/>


    <TextView
        android:id="@+id/lblitem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Me"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/fld_fb1"/>

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0.0"
        android:layout_below="@+id/lblitem2"/>

    <EditText
        android:id="@+id/fld_fb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter additional comments"
        android:layout_marginLeft="8dp"
        android:paddingLeft="5dp"
        android:textSize="13sp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/ratingBar2"/>

    <TextView
        android:id="@+id/lblitem3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Me"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/fld_fb2"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <RatingBar
        android:id="@+id/ratingBar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="0.0"
        android:layout_below="@+id/lblitem3"/>

    <EditText
        android:id="@+id/fld_fb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter additional comments"
        android:layout_marginLeft="8dp"
        android:paddingLeft="5dp"
        android:textSize="13sp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/ratingBar3"/>

    <Button
        android:id="@+id/btnSubmit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/fld_fb3"
        />

</RelativeLayout>
